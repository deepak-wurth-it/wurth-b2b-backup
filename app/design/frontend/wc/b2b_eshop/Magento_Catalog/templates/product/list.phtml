             var currentQTY = parseInt($(this).parent().parent().find(".qty-default").val());
             currentQTY = currentQTY + 1;
             $(this).parent().parent().find(".qty-default").val(currentQTY);
         });
   
         $('.quantity-minus').click(function () {
             // var value = Number($('.qty-default').val()) - 1;
             var currentQTY = parseInt($(this).parent().parent().find(".qty-default").val());
