<script>
function openCity(evt, pdpTabName) {
  var i, pdpTabcontentbox, pdpTabnames;
  pdpTabcontentbox = document.getElementsByClassName("pdpTabcontentbox");
  for (i = 0; i < pdpTabcontentbox.length; i++) {
    pdpTabcontentbox[i].style.display = "none";
  }
  pdpTabnames = document.getElementsByClassName("pdpTabnames");
  for (i = 0; i < pdpTabnames.length; i++) {
    pdpTabnames[i].className = pdpTabnames[i].className.replace(" active", "");
  }
  document.getElementById(pdpTabName).style.display = "block";
  evt.currentTarget.className += " active";
}
