<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
     <update handle="editor"/>
    <body>
	   <referenceContainer name="content">
            <block class="Plazathemes\Template\Block\Adminhtml\Template\Edit" name="template_edit"/>
        </referenceContainer>
		 <referenceContainer name="left">
            <block class="Plazathemes\Template\Block\Adminhtml\Template\Edit\Tabs" name="template_edit_tabs">
                <block class="Plazathemes\Template\Block\Adminhtml\Template\Edit\Tab\Template" name="template_edit_tab_template"/>
				 <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">template_edit_tab_template</argument>
                </action>
			</block>
        </referenceContainer>
    </body>
</page>
