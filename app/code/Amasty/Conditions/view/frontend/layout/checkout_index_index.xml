                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="sidebar" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="summary" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="block-amasty-conditions-summary" xsi:type="array">
                                                    <item name="component" xsi:type="string">uiComponent</item>
                                                    <item name="children" xsi:type="array">
                                                        <item name="block-amasty-conditions" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="amasty-conditions" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Amasty_Conditions/js/model/conditions-subscribe</item>
                                                                    <item name="displayArea" xsi:type="string">amasty-conditions</item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
