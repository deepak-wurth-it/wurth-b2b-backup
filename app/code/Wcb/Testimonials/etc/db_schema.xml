<?xml version="1.0" ?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="wcb_testimonials" resource="default" engine="innodb" comment="wcb_testimonials Table">
		<column xsi:type="smallint" name="testimonials_id" padding="6" unsigned="true" nullable="false" identity="true" comment="Entity Id"/>
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="testimonials_id"/>
		</constraint>
		<column name="title" nullable="true" xsi:type="text" comment="title"/>
		<column name="content" nullable="true" xsi:type="text" comment="description"/>
		<column name="date" nullable="true" xsi:type="date" comment="date"/>
		<column name="author" nullable="true" xsi:type="text" comment="client_name"/>
		<column name="image" nullable="true" xsi:type="text" comment="Client Image"/>
		<column name="designation" nullable="true" xsi:type="text" comment="client_designation"/>
		<column name="status" nullable="true" xsi:type="boolean" comment="status"/>
	</table>
</schema>
