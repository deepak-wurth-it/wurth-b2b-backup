<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
   
   <!-- Every Hour Once -->

    <group id="pim">
        <job name="pim_import_images_in_product" instance="Wcb\Cron\PimCron\ImportImages" method="execute">
            <schedule>0 * * * *</schedule>
        </job>
    </group>
    
    <!-- Every 3 Hours  Once-->
    <group id="pim">
        <job name="pim_import_update_product" instance="Wcb\Cron\PimCron\ImportPimProducts" method="execute">
            <schedule>0 */3 * * *</schedule>
        </job>
    </group>
    
     <!-- Every Hour Once -->

     <group id="pim">
        <job name="pim_product_pdf" instance="Wcb\Cron\PimCron\UpdateProductPdf" method="execute">
            <schedule>0 * * * *</schedule>
        </job>
    </group>
    
    <!-- Every Day Once -->
     <group id="pim">
        <job name="pim_product_bar_code" instance="Wcb\Cron\PimCron\UpdateProductBarCode" method="execute">
            <schedule>0 1 * * *</schedule>
        </job>
    </group>
    
    <!-- Every Day Once -->
     <group id="pim">
        <job name="pim_product_attribute_values" instance="Wcb\Cron\PimCron\UpdateProductAttributeValues" method="execute">
            <schedule>0 1 * * *</schedule>
        </job>
    </group>
    
    <!-- Every Hour Once -->
     <group id="pim">
        <job name="pim_category_images" instance="Wcb\Cron\PimCron\ImportCategoryImages" method="execute">
            <schedule>0 * * * *</schedule>
        </job>
    </group>
    
    
     <!-- Once in a month -->
     <group id="pim">
        <job name="units_of_measure" instance="Wcb\Cron\PimCron\ImportUnitsOfMeasure" method="execute">
            <schedule>0 0 1 * *</schedule>
        </job>
    </group>

      <!-- Every Day Once -->
     <group id="pim">
        <job name="product_categories" instance="Wcb\Cron\PimCron\UpdateProductCategories" method="execute">
            <schedule>0 0 3 * *</schedule>
        </job>
    </group>
    
    
     <group id="wurthnav">
        <job name="customer_group_import" instance="Wcb\Cron\WurthNavCron\ImportUnitsOfMeasure" method="execute">
            <schedule>0 0 * * *</schedule>
        </job>
    </group>
    
       <group id="wurthnav">
        <job name="customer_address_import" instance="Wcb\Cron\WurthNavCron\ImportCustomerAddress" method="execute">
            <schedule>0 0 * * *</schedule>
        </job>
    </group>
    
     <group id="wurthnav">
        <job name="emplpyees_import" instance="Wcb\Cron\WurthNavCron\ImportEmployees" method="execute">
            <schedule>0 0 * * *</schedule>
        </job>
    </group>
    
     
     <group id="wurthnav">
        <job name="customer_register_update_to_erp" instance="Wcb\Cron\WurthNavCron\ExportRegisterDataToERP" method="execute">
            <schedule>*/10 * * * *</schedule>
        </job>
    </group>
    <group id="wurthnav">
        <job name="customer_register_update_to_erp_to_magento" instance="Wcb\Cron\WurthNavCron\ImportRegisterDataToERP" method="execute">
            <schedule>*/10 * * * *</schedule>
        </job>
    </group>
    
<!--<group id="pim">
        <job instance="Wcb\Cron\Test\TestCron" method="execute" name="test_cron">
                 <schedule>* * * * *</schedule>
         </job>
    </group>-->
</config>
