<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
	<referenceContainer name="columns">
            <container name="columns.main" htmlTag="div" htmlClass="column main col-md pdpWrapper" before="-" />
        </referenceContainer>
 <referenceContainer name="content">
     <referenceBlock name="sidebar.main" remove="true"/>
     <referenceBlock name="sidebar.additional" remove="true"/>
   </referenceContainer >
   <referenceBlock name="page.main.title" display="false"/>
		<referenceContainer name="div.sidebar.additional">
			<block class="Magento\Cms\Block\Block" name="banner_left" after="recentproductslider">
				<arguments>
					<argument name="block_id" xsi:type="string">banner_left</argument>
				</arguments>
		   </block>		  
		 </referenceContainer>
		  <!-- <move element="category.view.container" destination="page.top" before="-"/> -->
		 <!-- <move element="breadcrumbs" destination="category.view.container" before="page.main.title"/> -->
		 <!-- <move element="page.main.title" destination="content" before="-"/> -->
		 <!-- <referenceContainer name="page.main.title" remove="1"/> -->
		  <move element="category.view.container" destination="content" before="-"/>
		 <move element="breadcrumbs" destination="page.top" before="-"/>
		 <move element="page.main.title" destination="content" before="category.products"/>
        <referenceBlock name="catalog.leftnav" remove="true"/>
		<referenceBlock name="category.products.list">
			<action method="setTemplate">
				<argument name="template" xsi:type="string">Wcb_Catalog::product/list_level_5.phtml</argument>
			</action>
		</referenceBlock>
    </body>
</page>
